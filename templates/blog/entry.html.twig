{% extends "base.html.twig" %}
{% block title %}{{ entry.title }}{% endblock %}
{% block body %}
<div class="container">
 <div class="blog-header">
    <h1 class="blog-title">{{ entry.title }}</h1>
</div>
<div class="row">
    <div class="col-sm-12 blog-main">
        <div class="blog-post">
            <p class="blog-post-meta">
            {{ entry.creationDate|date('F j, Y') }} by <a href="{{ path('user', {'name': entry.user.username|url_encode }) }}">
                {{ entry.user.username }}
            </a>
        </p>
            <h3>Content:</h3>
            <cite>{{ entry.content|raw }}</cite>
        </div>
    </div>
</div>
<button type="button" class="btn btn-info" onclick="history.go(-1);">Back</button>
</div>
{% endblock %}